.col-md-6.col-md-offset-3
  .panel.panel-primary
    .panel-heading REGISTER
    .panel-body 
      form
        .form-group
          label NAME
          input.form-control.input-lg(type='text', ng-model='vm.user.name')
        .form-group
          label EMAIL
          input.form-control.input-lg(type='email', ng-model='vm.user.email')
        .form-group
          label PASSWORD
          input.form-control.input-lg(type='password', ng-model='vm.user.password')
        .form-group
          label CONFIRM PASSWORD
          input.form-control.input-lg(type='password', ng-model='vm.confirmPassword')
        .form-group
          button.btn.btn-success.btn-lg.btn-block(type='submit', ng-click='vm.register()') REGISTER
