.col-md-6.col-md-offset-3
  .panel.panel-primary
    .panel-heading CONTACT
    .panel-body 
      form
        .form-group
          label NAME
          input.form-control.input-lg(type='text', ng-model='vm.contact.name')
        .form-group
          label EMAIL
          input.form-control.input-lg(type='email', ng-model='vm.contact.email')
        .form-group
          label DESCRIPTION
          textarea.form-control.input-lg(type='text', ng-model='vm.contact.description')
        .form-group
          button.btn.btn-primary.btn-lg.btn-block(type='submit', ng-click='vm.save()') SAVE
