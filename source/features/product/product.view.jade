.col-md-6.col-md-offset-3
  .panel.panel-primary
    .panel-heading PRODUCT
    .panel-body 
      form
        .form-group
          label NAME
          input.form-control.input-lg(type='text', ng-model='vm.product.name')
        .form-group
          label PRICE
          input.form-control.input-lg(type='number', ng-model='vm.product.price')
        .form-group
          label QUANTITY
          textarea.form-control.input-lg(type='number', ng-model='vm.product.quantity')
        .form-group
          button.btn.btn-success.btn-lg.btn-block(type='submit', ng-click='vm.save()') SAVE
