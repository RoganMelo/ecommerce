{
  "apps" : [
    {
      "name"      : "ecommerce",
      "script"    : "server.js",
      "env": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy" : {
    "production" : {
      "user" : "root",
      "host" : "192.168.0.6",
      "ref"  : "origin/master",
      "repo" : "git@github.com:RoganMelo/ecommerce.git",
      "path" : "/opt/ecommerce",
      "post-deploy" : "npm install && bower install --allow-root && gulp compile:production && pm2 startOrRestart ecosystem.json --env production --only ecommerce",
      "env"  : {
        "NODE_ENV": "production",
        "PORT": "80"
      }
    }
  }
}
